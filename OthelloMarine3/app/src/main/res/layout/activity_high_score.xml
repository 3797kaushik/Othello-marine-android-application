<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context="com.game.koushikm.othellomarine.highScore">

<!--*************************************************************************-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="#00a2e8"

        android:paddingLeft="7dp"
        android:layout_marginTop="4dp"
        android:padding="0dp"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:src="@drawable/black3"
            android:id="@+id/black_image"
            android:layout_marginRight="30dp"
            android:padding="0dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:padding="0dp"
            android:id="@+id/balck_score"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="0"

            />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="7dp"
        android:padding="0dp"
        android:background="#00a2e8"
        android:layout_width="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/white_image"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:padding="0dp"

            android:layout_marginRight="30dp"
            android:src="@drawable/brown3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:id="@+id/white_score"
            android:layout_height="wrap_content"  android:textSize="25dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="0"

            />
    </LinearLayout>
<TextView
    android:background="#FF9602"
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    android:text="default wins by the x Runs with the difference of y points"
    android:textStyle="italic"
    android:textSize="35dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:id="@+id/concl"
    android:layout_height="wrap_content" />

<!--*************************************************************************-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:onClick="reset1"

        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="14dp"

        /> <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="return"
        android:onClick="return1"

        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="14dp"

        />
</LinearLayout>
