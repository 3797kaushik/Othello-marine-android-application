<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.game.koushikm.othellomarine.ScoreFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score"
        android:textAlignment="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="26dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="#000000"
        >
     <LinearLayout
         android:layout_width="wrap_content"
         android:background="#00a2e8"
         android:paddingLeft="7dp"
         android:layout_marginTop="4dp"
         android:padding="0dp"
         android:layout_marginLeft="5dp"
         android:layout_marginBottom="4dp"
         android:layout_marginRight="0dp"
         android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:src="@drawable/black1"
            android:id="@+id/black_image"
            android:layout_marginRight="50dp"
            android:padding="0dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:padding="0dp"
            android:id="@+id/balck_score"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="0"

            />
     </LinearLayout>

        <LinearLayout
            android:paddingLeft="7dp"
            android:padding="0dp"
            android:background="#00a2e8"
            android:layout_width="wrap_content"
            android:layout_margin="4dp"

            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/white_image"
            android:layout_width="90dp"
            android:layout_height="64dp"
            android:padding="0dp"

            android:layout_marginRight="30dp"
            android:src="@drawable/brown1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="0dp"
            android:id="@+id/white_score"
            android:layout_height="wrap_content"  android:textSize="25dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="0"

            />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
